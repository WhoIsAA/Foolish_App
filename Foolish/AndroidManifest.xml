<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foolish.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.foolish.app.ui.AppStart"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".ui.activity.Start" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
        <activity 
            android:name=".ui.activity.LoginActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
        <activity 
            android:name=".ui.activity.RegisterActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
        <activity 
            android:name=".ui.activity.GesturePwdActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
                
        <activity 
            android:name=".ui.activity.MainActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
        <activity 
            android:name=".ui.activity.QuestionPubActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        
        <activity 
            android:name=".ui.activity.TalkPubActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        
        <activity 
            android:name=".ui.activity.SettingActivity" 
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
    </application>

</manifest>
