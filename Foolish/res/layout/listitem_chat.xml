<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/space_10" >

    <ImageButton
        android:id="@+id/id_ib_chat_head"
        style="@style/listitem_head_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/iv_cont_des_string" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_ib_chat_head"
        android:layout_alignTop="@+id/id_ib_chat_head"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginStart="@dimen/space_10"
        android:layout_toEndOf="@+id/id_ib_chat_head"
        android:layout_toRightOf="@+id/id_ib_chat_head"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/id_tv_chat_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/id_tv_chat_latest_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="#8d8d8d"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/id_tv_chat_latest_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/space_8"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</RelativeLayout>