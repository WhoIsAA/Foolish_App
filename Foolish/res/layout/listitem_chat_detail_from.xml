<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_10" >

    <TextView
        android:id="@+id/id_tv_chat_detail_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_10"
        android:background="@drawable/trans_round_nor_bg_selector"
        android:text="昨天 晚上 23:53"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/id_ib_chat_detail_from_head"
            style="@style/listitem_head_image"
            android:layout_marginEnd="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:contentDescription="@string/iv_cont_des_string" />

        <TextView
            android:id="@+id/id_tv_chat_detail_from_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_detail_from_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:text="你看这个APP怎样，有什么可以改进的地方吗？"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>