<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_10" >

    <TextView
        android:id="@+id/id_tv_chat_detail_to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_10"
        android:background="@drawable/trans_round_nor_bg_selector"
        android:text="昨天 晚上 23:53"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginStart="@dimen/space_30" >

        <TextView
            android:id="@+id/id_tv_chat_detail_to_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/id_ib_chat_detail_to_head"
            android:layout_toStartOf="@+id/id_ib_chat_detail_to_head"
            android:background="@drawable/chat_detail_to_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/space_10"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_20"
            android:paddingTop="@dimen/space_10"
            android:text="我看看，一会再和你详细说我看看，一会再和你详细说"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <ImageButton
            android:id="@+id/id_ib_chat_detail_to_head"
            style="@style/listitem_head_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginStart="@dimen/space_5"
            android:contentDescription="@string/iv_cont_des_string" />
    </RelativeLayout>

</LinearLayout>