<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_10" >

    <ImageView
        android:id="@+id/concern_listitem_head"
        style="@style/listitem_head_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/iv_cont_des_string" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginStart="@dimen/space_10"
        android:layout_toEndOf="@+id/concern_listitem_head"
        android:layout_toLeftOf="@+id/concern_listitem_btn"
        android:layout_toRightOf="@+id/concern_listitem_head"
        android:layout_toStartOf="@+id/concern_listitem_btn"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/concern_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="AA"
            android:textColor="@color/listitem_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/concern_listitem_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我回复了你，怎么办啊啊啊啊"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <Button
        android:id="@+id/concern_listitem_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/trans_rect_bg_selector"
        android:padding="@dimen/space_5"
        android:text="取消关注" />

</RelativeLayout>