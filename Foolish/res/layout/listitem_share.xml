<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/space_10" >

    <ImageView
        android:id="@+id/talk_listitem_head"
        style="@style/listitem_head_image"
        android:contentDescription="@string/iv_cont_des_string" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginStart="@dimen/space_10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/talk_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="AA"
            android:textColor="@color/listitem_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/talk_listitem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="有人吗？有人吗？？？有人吗？有人吗？有人吗？？？有人吗？有人吗？？？有人吗？有人吗？？？"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/talk_listitem_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:contentDescription="@string/iv_cont_des_string"
            android:background="@drawable/listitem_empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talk_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两天前"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />

            <ImageView
                android:id="@+id/talk_listitem_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginStart="@dimen/space_10"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/iv_cont_des_string"
                android:src="@drawable/comment_count_icon" />

            <TextView
                android:id="@+id/talk_listitem_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_3"
                android:layout_marginStart="@dimen/space_3"
                android:text="3"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>