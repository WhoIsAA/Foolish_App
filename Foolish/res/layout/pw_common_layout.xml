<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/micro_transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/space_10" >

    <TextView
        android:id="@+id/id_tv_pw_common_item_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/option_setting_bg_top"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/space_15"
        android:text="One"
        android:textColor="@drawable/pw_text_color_selector"
        android:textSize="@dimen/option_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_split_line" />

    <TextView
        android:id="@+id/id_tv_pw_common_item_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/option_setting_bg_bottom"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/space_15"
        android:text="Two"
        android:textColor="@drawable/pw_text_color_selector"
        android:textSize="@dimen/option_text_size" />

    <TextView
        android:id="@+id/id_tv_pw_common_item_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/option_setting_bg_full"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/space_10"
        android:text="Three"
        android:textColor="@drawable/pw_text_color_selector"
        android:textSize="@dimen/option_text_size" />

</LinearLayout>