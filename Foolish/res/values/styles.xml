<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 首页底部导航按钮 -->
    <style name="MainTabButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_tab_bg</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">0sp</item>
    </style>

    <!-- 正文字体风格 -->
    <style name="ContentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- 标题风格 -->
    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/text_size_19</item>
		<item name="android:textColor">@color/head_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>
    
    <!-- 用户头像风格 -->
    <style name="listitem_head_image" >
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/user_head_border</item>
        <item name="android:src">@drawable/user_head_loading</item>    
    </style>
    
    <!-- 列表风格 -->
    <style name="listitem_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">@drawable/listview_item_bg_selector</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:divider">#f0f0f0</item>
        <item name="android:dividerHeight">1.5dp</item>
    </style>
    
    <!-- switch button -->
    <style name="switch_button_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
		<item name="android:drawablePadding">16dp</item>
	    <item name="android:textColor">@android:color/black</item>
    </style>
    
    
    <!-- PopupWindow 显示&消失动画 -->
    <style name="popupwindow_anim_style">
        <!-- 指定显示动画 -->
        <item name="android:windowEnterAnimation">@anim/pw_show_anim</item>
        <!-- 指定消失动画 -->
        <item name="android:windowExitAnimation">@anim/pw_hide_anim</item>
    </style>
    
</resources>